{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "sync/Sales/SalesPriceListVolumeDiscounts",
  "properties": {
    "Timestamp": {
      "description": "Timestamp",
      "type": "integer"
    },
    "BasePrice": {
      "description": "ID of the base price. If base price = use the standard sales price, it shows null. If base price = set sales price, it shows ID of the sales price within this volume discount.",
      "type": "string"
    },
    "BasePriceAmount": {
      "description": "Amount of the base price. If base price = use the standard sales price, it shows the latest item sales price.  If base price = set sales price, it shows the base price which defined in price list.",
      "type": "number"
    },
    "Created": {
      "description": "Creation date",
      "type": "string",
      "format": "date-time"
    },
    "Creator": {
      "description": "User ID of creator",
      "type": "string"
    },
    "CreatorFullName": {
      "description": "Name of creator",
      "type": "string"
    },
    "Discount": {
      "description": "Discount",
      "type": "number"
    },
    "Division": {
      "description": "Division code",
      "type": "integer"
    },
    "EntryMethod": {
      "description": "Indicates whether discount or the new price is leading : 1-Discount, 2-New price. Scenario 1. When entry method is Discount and use base price, Discounted price = (1 - SalesPriceListDetails.Discount) * SalesPriceListDetails.BasePriceAmount 2. When entry method is Discount and use Item's standard sales price, Discounted price = (1 - SalesPriceListDetails.Discount) * SalesItemPrices.Price 3. When entry method is New price, Discounted price = SalesPriceListDetails.NewPrice",
      "type": "integer"
    },
    "ID": {
      "description": "Primary key",
      "type": "string"
    },
    "Item": {
      "description": "Item ID",
      "type": "string"
    },
    "ItemCode": {
      "description": "Item code",
      "type": "string"
    },
    "ItemDescription": {
      "description": "Description of the item",
      "type": "string"
    },
    "ItemGroup": {
      "description": "Item group ID",
      "type": "string"
    },
    "ItemGroupCode": {
      "description": "Item group code",
      "type": "string"
    },
    "ItemGroupDescription": {
      "description": "Item group description",
      "type": "string"
    },
    "Modified": {
      "description": "Last modified date",
      "type": "string",
      "format": "date-time"
    },
    "Modifier": {
      "description": "User ID of modifier",
      "type": "string"
    },
    "ModifierFullName": {
      "description": "Name of modifier",
      "type": "string"
    },
    "NewPrice": {
      "description": "New price after discount",
      "type": "number"
    },
    "NumberOfItemsPerUnit": {
      "description": "Number of the item per unit",
      "type": "number"
    },
    "PriceListCode": {
      "description": "Code of the PriceList",
      "type": "string"
    },
    "PriceListDescription": {
      "description": "Description of the PriceList",
      "type": "string"
    },
    "PriceListPeriod": {
      "description": "Price list period ID",
      "type": "string"
    },
    "Quantity": {
      "description": "Quantity",
      "type": "number"
    },
    "Unit": {
      "description": "Unit",
      "type": "string"
    },
    "UnitDescription": {
      "description": "Description of the unit",
      "type": "string"
    }
  }
}